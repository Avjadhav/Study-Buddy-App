<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:id="@+id/tv_login_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Buddy"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
       android:layout_marginBottom="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_1"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/white"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_login_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/et_email_log"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tv_login_2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/cat_buttons"/>

            <EditText
                android:id="@+id/et_pass_log"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/et_email_log"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/cat_buttons"></EditText>
            <TextView
                android:id="@+id/tv_login_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pass_log"
                android:text="Forgot Password ?"
                android:layout_margin="10dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17sp"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Login"
                android:textColor="#FA71CD"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_below="@+id/tv_login_3"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/cat_buttons"
                ></Button>

            <TextView
                android:id="@+id/tv_login_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Don't have an Account? Sign Up"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="17sp"
                android:layout_below="@+id/btn_login"
                android:layout_margin="10dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>