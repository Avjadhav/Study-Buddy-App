<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1D2E8"
                android:orientation="vertical">

        <TextView
            android:id="@+id/list_tv_1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:hint="Teacher Name"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/list_tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notice Content"
            android:textColor="@android:color/black"
            android:paddingStart="10dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/list_tv_1"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/list_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="TimeStamp"
            android:layout_below="@+id/list_tv_2"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="13sp"/>
        </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>