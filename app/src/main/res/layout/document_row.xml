<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1D2E8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_tv_1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:hint="Teacher Name"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textSize="15sp"/>
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_tv_1"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/list_tv_2"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="Document Name"
                android:textColor="@android:color/black"
                android:paddingStart="10dp"
                android:layout_margin="5dp"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/documentdownload_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_baseline_cloud_download_24"
                />
                <Button
                    android:id="@+id/documentdelete_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_baseline_delete_forever_24"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/list_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="TimeStamp"
                android:layout_below="@+id/linear"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/holo_red_light"
                android:textSize="13sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>